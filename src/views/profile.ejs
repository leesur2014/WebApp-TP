<div class="modal" tabindex="-1" role="dialog" id="profile-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Profile</h3>
      </div>
      <div class="modal-body">
        <form id="change-nickname-form" class="form-group">
           <input class="form-control" type="text" placeholder="Drawing Score: <%= user.score_draw %>" readonly>
           <input class="form-control" type="text" placeholder="Guessing Score: <%= user.score_guess %>" readonly>
          <label for="input-nickname">Nickname</label>
          <input type="text" name="nickname" id="input-nickname" class="form-control" value="<%= user.nickname %>" required>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
