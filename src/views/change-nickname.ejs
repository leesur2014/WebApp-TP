                        <label for="nickname">Input your nickname</label>
                        <input type="text" name ="nickname" class="form-control" id="nickname" placeholder="Nickname">
                    </div>
                    <br>
                    <br>
                    <button  id = "game_submit" type="submit" class = "btn btn-primary">Submit</button>
                </form>

            </div>
        </div>
        <div class = "col-0 col-md-3"></div>
    </div>
</div>
  <% include scripts %>
