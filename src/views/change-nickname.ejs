    <link rel="stylesheet" href="/static/css/game-center.css">
</head>
<body>

<% include nav-bar %>

<div class="container">
    <div class = "row">
        <div class = "col-0 col-md-3"></div>
        <div class = "col-12 col-md-6">
            <div id = "form_container">
                <form id="change_nickname" action = "/api/enter">
