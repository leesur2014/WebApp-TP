        <tr>
          <th>ID</th>
          <th># Players</th>
          <th># Observers</th>
          <th>Enter room as</th>
        </tr>
      </thead>
      <tbody id="room-table">
      </tbody>
    </table>
  </div>

  <% include join-room %>
  <% include profile %>
  <% include create-room %>

  <% include scripts %>
  <script src="/static/js/game-center.js"></script>
  <script src="/static/js/join-room.js"></script>
