<!DOCTYPE html>
<html lang="en">
<head>
    <% include head %>
    <title>Game Center</title>
</head>
<body>

  <nav class="navbar navbar-inverse">
      <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Guess My Drawings</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                  <li class="active"><a href="/">Game Center</a></li>
                  <li><a href="/score-board">Score board</a></li>
                  <li><a href="#" data-toggle="modal" data-target="#create-room-modal">Create Room</a></li>
                  <li><a href="#" data-toggle="modal" data-target="#join-room-modal">Join Room</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                  <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                          <span><%= user.nickname %></span>
                          <span class="caret"></span>
                      </a>
                      <ul class="dropdown-menu">
                          <li><a href="#" data-toggle="modal" data-target="#profile-modal">Profile</a></li>
                          <li><a href="/users/logout">Logout</a></li>
                          <li class="navbar-text">Drawing Score: <%= user.score_draw %></li>
                          <li class="navbar-text">Guessing Score: <%= user.score_guess %></li>
                      </ul>
                  </li>
              </ul>
          </div>
      </div>
  </nav>

  <input type="text" value="<%= user.token %>" hidden="true" id="user-token">

  <div id="room-container" class="container">

  </div>

  <% include join-room %>
  <% include profile %>
  <% include create-room %>

  <% include scripts %>
  <script src="/static/js/game-center.js"></script>
  <script src="/static/js/join-room.js"></script>
  <script src="/static/js/create-room.js"></script>
  <script src="/static/js/change-nickname.js"></script>
</body>
</html>
